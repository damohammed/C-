using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Myprogram2
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.Write("Ent number: ");
            int ff = Convert.ToInt32(Console.ReadLine()); //converting string into integeer
            Console.Write("give second number: ");  
            int ff2 = Convert.ToInt32(Console.ReadLine()); //We always have to use Readline after Write
            Console.WriteLine(ff * ff2);
            
            Console.Write("First number: ");
            int numb = Convert.ToInt32(Console.ReadLine());
            Console.Write("Enter second one: ");
            double numb2 = Convert.ToDouble(Console.ReadLine());
            Console.WriteLine(numb - numb2);
            
            // let's try one more
           
            
            Console.Write("Give number: ");
            int num = Convert.ToInt32(Console.ReadLine()); 
            Console.Write("Give second number: ");  
            int num2 = Convert.ToInt32(Console.ReadLine());

            Console.WriteLine(num / num2);
            Console.ReadLine();
        }
    }
}
